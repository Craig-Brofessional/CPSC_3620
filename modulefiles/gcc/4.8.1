#%Module1.0#####################################################################
##
## gcc/4.8.1  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tgcc/4.8.1 module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the GNU compilers:"
        puts stderr "\t      PATH"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      MANPATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

conflict gcc intel

module add gmp/4.3.2
module add mpfr/2.4.2
module add mpc/0.8.1


module-whatis	"Set up environment for GNU 4.8.1 compilers"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path	PATH			/software/gcc/4.8.1/bin
prepend-path	LIBRARY_PATH		/software/gcc/4.8.1/lib64
prepend-path	LD_LIBRARY_PATH		/software/gcc/4.8.1/lib64
prepend-path	CPLUS_INCLUDE_PATH	/software/gcc/4.8.1/include/c++/4.8.1
prepend-path	MANPATH			/software/gcc/4.8.1/share/man

setenv   CC  gcc
setenv   CXX g++
setenv   F77 gfortran
setenv   F90 gfortran


setenv  COMPILER_MODULE  "gcc/4.8.1"

if [ module-info mode display ] {
        ModulesHelp
}

