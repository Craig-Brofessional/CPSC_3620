#%Module1.0#####################################################################
##
## gcc/3.4  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tgcc/3.4 module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the GNU compilers:"
        puts stderr "\t      PATH"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      MANPATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

conflict gcc/4.1 intel/10.0 intel/10.1

module-whatis	"Set up environment for GNU 3.4 compilers"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

setenv   CC  gcc34
setenv   CXX g++34
setenv   F77 g77
unsetenv F90
unsetenv FC

setenv  COMPILER_MODULE  "gcc/3.4"

if [ module-info mode display ] {
        ModulesHelp
}

