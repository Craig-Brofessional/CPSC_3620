#%Module1.0#####################################################################
##
## mpfi/1.5.1  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tmpfi module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the mpfi libraries:"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      LIBRARY_PATH"
        puts stderr "\t      C_INCLUDE_PATH"
        puts stderr "\t      CPLUS_INCLUDE_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for the MPFI libraries"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  LD_LIBRARY_PATH      "/software/mpfi/1.5.1/lib"
prepend-path  LIBRARY_PATH         "/software/mpfi/1.5.1/lib"
prepend-path  C_INCLUDE_PATH       "/software/mpfi/1.5.1/include"
prepend-path  CPLUS_INCLUDE_PATH   "/software/mpfi/1.5.1/include"


if [ module-info mode display ] {
        ModulesHelp
}

