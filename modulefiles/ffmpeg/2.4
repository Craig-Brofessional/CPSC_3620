#%Module1.0#####################################################################
##
## ffmpeg/2.4  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tffmpeg module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the ffmpeg libraries:"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      LIBRARY_PATH"
        puts stderr "\t      C_INCLUDE_PATH"
        puts stderr "\t      CPLUS_INCLUDE_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for the MPFR libraries"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH                 "/software/ffmpeg/2.4/bin"
prepend-path  LD_LIBRARY_PATH      "/software/ffmpeg/2.4/lib"
prepend-path  LIBRARY_PATH         "/software/ffmpeg/2.4/lib"
prepend-path  C_INCLUDE_PATH       "/software/ffmpeg/2.4/include"
prepend-path  CPLUS_INCLUDE_PATH   "/software/ffmpeg/2.4/include"
prepend-path  PKG_CONFIG_PATH      "/software/ffmpeg/2.4/lib/pkgconfig"
prepend-path  MANPATH              "/software/ffmpeg/2.4/share/man"


if [ module-info mode display ] {
        ModulesHelp
}

