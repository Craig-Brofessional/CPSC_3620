#%Module1.0#####################################################################
##
## magma/1.4.1  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tmagma module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the gsl libraries:"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      C_INCLUDE_PATH"
        puts stderr "\t      CPLUS_INCLUDE_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

# prereq intel 

module-whatis	"Set up environment for the MAGMA (Matrix Algebra on GPU and Multicore Architectures)"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  LD_LIBRARY_PATH      /software/magma/1.4.1/lib
prepend-path  C_INCLUDE_PATH       /software/magma/1.4.1/include
prepend-path  CPLUS_INCLUDE_PATH   /software/magma/1.4.1/include

if [ module-info mode display ] {
        ModulesHelp
}

