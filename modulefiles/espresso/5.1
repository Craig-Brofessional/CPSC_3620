proc ModulesHelp { } {
        global version

        puts stderr "\n\tquantum-espresso module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the gsl libraries:"
        puts stderr "\t      PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

prereq intel/13.0 
prereq openmpi/1.6.4
prereq fftw/3.3.3-dp-gcc 

module-whatis	"Set up environment for the Quantum Espresso 5.1"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH      /software/espresso/5.1/bin

if [ module-info mode display ] {
        ModulesHelp
}

