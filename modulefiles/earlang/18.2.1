#%Module1.0#####################################################################
##
## earlang/18.2.1  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tearlang module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the netcdf libraries:"
        puts stderr "\t      PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for earlang"

module add gcc/5.3.0

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH             "/software/earlang/18.2.1/bin"
prepend-path  LD_LIBRARY_PATH  "/software/earlang/18.2.1/lib"

if [ module-info mode display ] {
        ModulesHelp
}

