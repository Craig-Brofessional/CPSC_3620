##
## opencv/2.4.9  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\topencv module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the opencv libraries:"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      LIBRARY_PATH"
        puts stderr "\t      C_INCLUDE_PATH"
        puts stderr "\t      CPLUS_INCLUDE_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for the MPFR libraries"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH                 "/software/opencv/2.4.9/bin"
prepend-path  LD_LIBRARY_PATH      "/software/opencv/2.4.9/lib"
prepend-path  LIBRARY_PATH         "/software/opencv/2.4.9/lib"
prepend-path  C_INCLUDE_PATH       "/software/opencv/2.4.9/include"
prepend-path  CPLUS_INCLUDE_PATH   "/software/opencv/2.4.9/include"
prepend-path  PKG_CONFIG_PATH      "/software/opencv/2.4.9/lib/pkgconfig"
prepend-path  PYTHONPATH           "/software/opencv/2.4.9/lib/python2.6/site-packages"


if [ module-info mode display ] {
        ModulesHelp
}

