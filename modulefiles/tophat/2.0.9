##
## tophat/2.0.9  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\ttophat module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the tophat binaries:"
        puts stderr "\t      PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for tophat"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH          /software/tophat/2.0.9/bin


if [ module-info mode display ] {
        ModulesHelp
}

