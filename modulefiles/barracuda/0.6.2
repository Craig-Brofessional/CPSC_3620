##
## barracuda/0.6.2  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tbarracuda module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the barracuda files:"
        puts stderr "\t      PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for the barracuda files"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

module add gcc/4.8.1
module add cuda-toolkit/6.0.37

prepend-path  PATH   /software/barracuda/0.6.2/bin

if [ module-info mode display ] {
        ModulesHelp
}

