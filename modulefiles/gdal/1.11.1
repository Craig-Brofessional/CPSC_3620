#%Module1.0#####################################################################
##
## gdal/1.11.1  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tgdal module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the gdal binaries:"
        puts stderr "\t      PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for gdal"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH              /software/gdal/1.11.1/bin
prepend-path  LD_LIBRARY_PATH   /software/gdal/1.11.1/lib
prepend-path  LIBRARY_PATH      /software/gdal/1.11.1/lib
prepend-path  C_INCLUDE_PATH    /software/gdal/1.11.1/include
prepend-path  PKG_CONFIG_PATH   /software/gdal/1.11.1/lib/pkgconfig

if [ module-info mode display ] {
        ModulesHelp
}

