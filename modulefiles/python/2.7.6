#%Module1.0#####################################################################
##
## python/2.7.6  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tpython module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the R libraries:"
        puts stderr "\t      PATH"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      MANPATH"
        puts stderr "\t      LIBRARY_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for python"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH                 "/software/python/2.7.6/bin"
prepend-path  MANPATH              "/software/python/2.7.6/share/man"
prepend-path  C_INCLUDE_PATH       "/software/python/2.7.6/include"
prepend-path  PKG_CONFIG_PATH      "/software/python/2.7.6/lib/pkgconfig"
append-path   LD_LIBRARY_PATH      "/usr/local/lib"

if [ module-info mode display ] {
        ModulesHelp
}

