proc ModulesHelp { } {
        global version

        puts stderr "\n\tR module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the R libraries:"
        puts stderr "\t      PATH"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      MANPATH"
        puts stderr "\t      LIBRARY_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}


module add intel/15.0

module-whatis	"Set up environment for R"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH                 "/software/R/3.2.2/bin"
prepend-path  LD_LIBRARY_PATH      "/software/R/3.2.2/lib64"
prepend-path  MANPATH              "/software/R/3.2.2/share/man"
prepend-path  LIBRARY_PATH         "/software/R/3.2.2/lib64"
prepend-path  C_INCLUDE_PATH       "/software/R/3.2.2/lib64/R/include"

if [ module-info mode display ] {
        ModulesHelp
}

