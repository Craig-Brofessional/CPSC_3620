##
## thrust/1.8.1  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tthrust module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the thrust libraries:"
        puts stderr "\t      CPLUS_INCLUDE_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for the Thrust library"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  CPLUS_INCLUDE_PATH   "/software/thrust/1.8.1"


if [ module-info mode display ] {
        ModulesHelp
}

