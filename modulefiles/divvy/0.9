#%Module1.0#####################################################################
##
## divvy/0.9  modulefile
##
proc ModulesHelp { } {
        global version

        puts stderr "\n\tdivvy module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the divvy binaries:"
        puts stderr "\t      PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis	"Set up environment for divvy"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prereq openmpi/1.6.4
prepend-path  PATH          /software/divvy/0.9/bin


if [ module-info mode display ] {
        ModulesHelp
}

