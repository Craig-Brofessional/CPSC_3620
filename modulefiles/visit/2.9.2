proc ModulesHelp { } {
        global version

        puts stderr "\n\tVisIt module"
        puts stderr "\t****************************************************"
        puts stderr "\n\t  This module sets up the following environment"
        puts stderr "\t  variables for the visit libraries:"
        puts stderr "\t      PATH"
        puts stderr "\t      LD_LIBRARY_PATH"
        puts stderr "\t      LIBRARY_PATH"
        puts stderr "\t      C_INCLUDE_PATH"
        puts stderr "\n\t  Version $version\n"
        puts stderr "\t****************************************************\n"
}

module-whatis "Set up environment for VisIt"

# for Tcl script use only
set     version      "3.2.6"

# Make sure no other hpc modulefiles are loaded before loading this module
eval set [ array get env MODULESHOME ]

prepend-path  PATH             "/software/visit/2.9.2/bin"
prepend-path  PATH             "/software/visit/2.9.2/2.9.2/bin"
prepend-path  PATH             "/software/visit/2.9.2/2.9.2/linux-x86_64/bin"

prepend-path  LD_LIBRARY_PATH  "/software/visit/2.9.2/2.9.2/linux-x86_64/lib"
prepend-path  LIBRARY_PATH     "/software/visit/2.9.2/2.9.2/linux-x86_64/lib"
prepend-path  C_INCLUDE_PATH   "/software/visit/2.9.2/2.9.2/linux-x86_64/include"

if [ module-info mode display ] {
        ModulesHelp
}

